<div class="form-wrapper">
  <h1 class="form-title">会員登録</h1>
  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
    
    <div class="field">
      <p>ニックネーム</p>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form" %>
    </div>
    
    <div class="field">
      <p>メールアドレス</p>
      <%= f.email_field :email, autocomplete: "email", class: "form" %>
    </div>
  
    <div class="field">
      <% if @minimum_password_length %>
      <p>パスワード (<%= @minimum_password_length %>文字以上)</p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
    </div>
  
    <div class="field">
      <p>パスワード再入力</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
    </div>
    
    <div class="btn-field">
      <div class="actions">
        <%= f.submit "登録", class: "btn-normal" %>
      </div>
  <% end %>

  <%= render "public/shared/links" %>
    </div>
</div>
