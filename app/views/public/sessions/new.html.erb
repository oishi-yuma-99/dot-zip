<div class="form-wrapper">
  <h1 class="form-title">ログイン</h1>
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field">
      <p>メールアドレス</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
    </div>
  
    <div class="field">
      <p>パスワード</p>
      <%= f.password_field :password, autocomplete: "current-password", class: "form" %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  
    <div class="btn-field">
      <div class="actions">
        <%= f.submit "ログイン", class: "btn-normal" %>
      </div>
  <% end %>
  
  <%= render "public/shared/links" %>
    </div>
</div>