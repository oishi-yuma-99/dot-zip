<header>
  <% if user_signed_in? || admin_signed_in? %>
    <%= image_tag 'site-logo.png', class: "header-logo" %>
    <nav class="header-nav">
      <ul class="nav-list">
        <% if admin_signed_in? %>
          <li>
            <%= link_to admin_root_path do %>
              <p class="nav-item"><i class="fa-solid fa-comments"></i> つぶやき</p>
            <% end %>
          </li>
          <li>
            <%= link_to admin_users_path do %>
              <p class="nav-item"><i class="fa-solid fa-user-group"></i> ユーザー</p>
            <% end %>
          </li>
          <li>
            <%= link_to admin_tags_path do %>
              <p class="nav-item"><i class="fa-solid fa-tag"></i> タグ</p>
            <% end %>
          </li>
          <li>
            <p class="nav-item">
              <%= link_to  destroy_admin_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </p>
          </li>
        <% elsif user_signed_in? %>
          <li>
              <%= link_to user_path(current_user.account_name) do %>
                <p class="nav-item first-item"><i class="fa-solid fa-house"></i> マイルーム</p>
              <% end %>
            </li>
          <li>
            <%= link_to posts_path do %>
              <p class="nav-item"><i class="fa-solid fa-comments"></i> つぶやき</p>
            <% end %>
          </li>
          <li>
            <%= link_to user_followings_path(current_user.account_name) do %>
              <p class="nav-item"><i class="fa-solid fa-user-group"></i> フレンド</p>
            <% end %>
          </li>
          <li>
            <p class="nav-item">
              <%= link_to  destroy_user_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </p>
          </li>
        <% end %>
      </ul>
    </nav>
    <div class="sp-menu">
      <input type="checkbox" id="sp-menu__check">
      <label for="sp-menu__check" class="sp-menu__box">
        <span></span>
      </label>
      <div class="sp-menu__content">
        <ul class="sp-menu__list">
          <li class="sp-menu__item">
              <%= link_to user_path(current_user.account_name) do %>
                <i class="fa-solid fa-house"></i> マイルーム
              <% end %>
            </a>
          </li>
          <li class="sp-menu__item">
              <%= link_to posts_path do %>
                <i class="fa-solid fa-comments"></i> つぶやき
              <% end %>
            </a>
          </li>
          <li class="sp-menu__item">
              <%= link_to user_followings_path(current_user.account_name) do %>
                <i class="fa-solid fa-user-group"></i> フレンド
              <% end %>
            </a>
          </li>
          <li class="sp-menu__item">
              <%= link_to  destroy_user_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket"></i> ログアウト
              <% end %>
            </a>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <%= image_tag 'site-logo.png', class: "header-logo-2" %>
  <% end %>
 </header>